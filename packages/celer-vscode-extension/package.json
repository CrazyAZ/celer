{
    "name": "celer",
    "displayName": "Celer Routing Extension",
    "description": "Extension for celer, a route doc platform for Breath of the Wild",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.65.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "contributes": {
        "languages": [{
            "id": "celer",
            "aliases": ["Celer BOTW", "celer"],
            "extensions": [".celer",".yaml"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "celer",
            "scopeName": "source.celer",
            "path": "./syntaxes/celer.tmLanguage.json"
        }]
    },
    "activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
    "devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.32.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.5.5"
	}
}